<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/isiMateriLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/judul"
                android:text="Tips For Great Listening"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="10pt"
                android:paddingTop="15dp"
                android:fontFamily="@font/opensans_reguler"
                android:paddingBottom="10dp"/>
            <ImageButton
                android:id="@+id/imgVi2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/judul"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@drawable/groupconversation"
                android:onClick="playMusic"
                android:background="@color/transparan"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nameTxt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgVi2"
                android:layout_margin="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgVi3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/study"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nameTxt4"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="playMusic"
                android:background="@color/transparan"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nameTxt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgVi3"
                android:layout_margin="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgVi4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/watchmovie"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nameTxt5"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="playMusic"
                android:background="@color/transparan"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nameTxt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgVi4"
                android:layout_margin="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/quizkecilsatu"
                android:onClick="quiskecilsattu"
                android:layout_below="@+id/nameTxt6"
                android:layout_centerHorizontal="true"
                android:text="Take Simple Quiz"
                android:textColor="@color/white"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/opensans_reguler"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>