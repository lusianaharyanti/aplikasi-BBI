    <!--Soal nomor 3 -->
    <ImageButton
        android:id="@+id/ibSuara2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/lintigaa"
        android:layout_centerHorizontal="true"
        android:background="@color/transparan"
        android:clickable="true"
        android:onClick="playJawabanc"
        android:scaleType="centerCrop"
        android:src="@drawable/qui1a" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTiga"
        android:layout_below="@id/ibSuara2"
        android:layout_margin="16dp"
        android:text="3. _______"
        android:textSize="16sp" />
    <!--Pilihan A-->
    <LinearLayout
        android:id="@+id/Linsatub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTiga">

        <ImageButton
            android:id="@+id/imgVi10b"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/tvTiga"
            android:layout_margin="16dp"
            android:background="@color/transparan"
            android:clickable="true"
            android:onClick="playJawabanc"
            android:scaleType="centerCrop"
            android:src="@drawable/a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Louds"
            android:textSize="8pt" />

    </LinearLayout>
    <!--Pilihan b-->
    <LinearLayout
        android:id="@+id/linduab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linsatub">

        <ImageButton
            android:id="@+id/imgVi11b"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Linsatub"
            android:layout_margin="16dp"
            android:background="@color/transparan"
            android:clickable="true"
            android:onClick="playJawabanc"
            android:scaleType="centerCrop"
            android:src="@drawable/b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="As Loud "
            android:textSize="8pt" />
    </LinearLayout>
    <!--Pilihan c-->
    <LinearLayout
        android:id="@+id/lintigab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linduab"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/imgVi12b"
            android:layout_width="25dp"
