            android:background="@color/transparan"
            android:clickable="true"
            android:onClick="playJawaban"
            android:scaleType="centerCrop"
            android:src="@drawable/a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Louds"
            android:textSize="8pt" />

    </LinearLayout>
    <!--Pilihan b-->
    <LinearLayout
        android:id="@+id/linduaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linsatua">

        <ImageButton
            android:id="@+id/imgVi11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imgVi10"
            android:layout_margin="16dp"
            android:background="@color/transparan"
            android:clickable="true"
            android:onClick="playJawaban"
            android:scaleType="centerCrop"
            android:src="@drawable/b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="As Loud "
            android:textSize="8pt" />
    </LinearLayout>
    <!--Pilihan c-->
    <LinearLayout
        android:id="@+id/lintigaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linduaa"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/imgVi12"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imgVi11"
            android:layout_margin="16dp"
            android:background="@color/transparan"
            android:clickable="true"
            android:onClick="playJawaban"
            android:scaleType="centerCrop"
            android:src="@drawable/c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="As Loud As"
            android:textSize="8pt" />
